			var $$scope = "";
			var $$http = "";
			function BlogCtrl($scope, $http,$routeParams){
				$$scope = $scope;
				$$http = $http;
                $scope.routeParams = $routeParams;
				$scope.items = [];

                $scope.initEditPage = function(){
                    $http.post('/manage/blog/edit', {
                        blogId: $scope.routeParams.blogId
                    }).success(function(data) {
                        $scope.data = data[0];
                    });
                }

                $scope.delete = function(blogId){
                    alert(blogId);
                    $http.post('/manage/blog/delete',{
                        blogId:blogId
                    }).success(function(data){
                        if(data.status == 'success'){
                            window.location.href = '#blog/list';
                        }
                    })
                }

                $scope.publish = function(){
                    detailEditor.sync();
                    $scope.data.content = $("[name='content']").val();
                    $http.post('/manage/blog/update',$scope.data).success(function(data){
                        if(data.status == 'success'){
                            window.location.href = '#blog/list';
                        }
                    });
                }


				$scope.QueryList = function(){
			 		$http.post('/list', {
			 			QueryDate: $scope.QueryDate
			 		}).success(function(data) {
			 			var items = data.results;
			 			var pageCount = data.pageCount;
			 			$scope.items = $scope.items.concat(items);
			 			var currentPage = data.currentPage || 1;
			 			var totalPages = data.pageCount;
			 			initPageInfo(currentPage, totalPages);
			 		});
				};
			}

             function initPageInfo(currentPage, pageCount){
                    var options = {
                        currentPage:currentPage,
                        totalPages:pageCount,
                        numberOfPages:20,
                        pageUrl:function(type, page, current){
                            return "javascript:load('"+page+"')";
                        }
                    }
                    $('#page').bootstrapPaginator(options);
            };

            function load(pageNum){
                $$http.post('/list', {
                    QueryDate: $$scope.QueryDate,
                    pageNum:pageNum
                }).success(function(data) {
                    var items = data.results;
                    $$scope.items = items;
                });
            }

			
