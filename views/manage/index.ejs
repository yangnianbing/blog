			.filter('author',function(){
					return function(obj){
						if(obj.authorId != null){
							return obj.authorId;
						}else{
							return obj.authorInfo;
						}
					}
			})
			.filter('substring', function(){
				return function(obj){
					return obj.substr(0, 15);
				}
			});

